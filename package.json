{
  "name": "lil-argv",
  "version": "0.1.0",
  "description": "a Lil Argv parser for ECMAScript CLI applications",
  "type": "module",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "main": "index.js",
  "exports": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "clean": "rm -rf node_modules coverage index.d.ts",
    "test": "c8 node test.js",
    "gen-types": "tsc index.js --declaration --allowJs --emitDeclarationOnly"
  },
  "c8": {
    "check-coverage": "true",
    "branches": "100",
    "functions": "100",
    "lines": "100",
    "statements": "100"
  },
  "keywords": [
    "argv",
    "argc",
    "args",
    "optparse",
    "argparse",
    "argument",
    "vector",
    "lil"
  ],
  "author": "Rand Schneck <i@rasch.co>",
  "license": "0BSD",
  "repository": {
    "type": "git",
    "url": "https://git.sr.ht/~rasch/lil-argv.git"
  },
  "devDependencies": {
    "c8": "^10.1.2",
    "fvb": "^0.1.0",
    "typescript": "^5.4.5"
  }
}
